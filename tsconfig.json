{
  "allowSyntheticDefaultImports": true,
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "lib": [ "es2015", "dom", "es6" ],
    "baseUrl": ".",
    "paths": {
      "$root/*": [ "src/*" ],
      "$components/*": [ "src/components/*" ],
      "$containers/*": [ "src/containers/*" ],
      "$modules/*": [ "src/modules/*" ],
      "$styles/*": [ "src/styles/*" ]
    }
  },
  "include": [
    "./src/**/*",
    "./custom.d.ts"
  ],
  "exclude": ["node_modules"]
}