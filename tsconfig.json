{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noEmit": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "lib": [ "es2015", "dom", "es6" ],
    "baseUrl": ".",
    "paths": {
      "$components/*": [ "src/components/*" ],
      "$containers/*": [ "src/containers/*" ],
      "$constants/*": [ "src/constants/*" ],
      "$images/*": [ "src/assets/images/*" ],
      "$modules/*": [ "src/modules/*" ],
      "$redux/*": [ "src/redux/*" ],
      "$styles/*": [ "src/styles/*" ],
      "$utils/*": [ "src/utils/*" ]
    }
  },
  "include": [
    "src/**/*",
    "config/**/*"
  ],
  "exclude": ["node_modules", "./build/**/*"]
}