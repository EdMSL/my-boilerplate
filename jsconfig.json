{
  "allowSyntheticDefaultImports": true,
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": false,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "lib": [ "es2015", "dom", "es6" ],
    "baseUrl": ".",
    "paths": {
      "$root/*": [ "src/*" ],
      "$js/*": [ "src/js/*" ],
      "$styles/*": [ "src/styles/*" ],
      "$images/*": [ "src/images/*" ],
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": ["node_modules", "./build/**/*"]
}